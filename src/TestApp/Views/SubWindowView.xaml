<UserControl x:Class="TestApp.Views.SubWindowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApp.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox x:Name="RandomNumber" FontSize="40" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
        <TextBox.Resources>
            <Style TargetType="Border">
                <Setter Property="BorderThickness" Value="0" />
            </Style>
        </TextBox.Resources>
    </TextBox>
</UserControl>
